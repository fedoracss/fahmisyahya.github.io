*:after
*:before
*
	box-sizing border-box

html
body
	margin 0
	padding 0
	border none
	outline none

body
	font-family Monaco, Consolas, "Lucida Console", monospace
	font-weight normal
	font-size 1rem
	line-height 1.5
	color #2c3e50
	background #ecf0f1

a
	color #3498db
	text-decoration none

/* navbar */

nav.navbar
	width 100%
	background #ffffff
	overflow hidden
	position fixed
	top 0
	left 0
	margin 0
	padding 0
	box-shadow 0px 1px 3px 0px rgba(0,0,0,0.12), 0px 1px 2px 0px rgba(0,0,0,0.24)
	header.navbar-head
		a
			float left
			display block
			color #2c3e50
			font-weight normal
			font-size 22px
			padding 12px 16px
			font-family Monaco, Consolas, "Lucida Console", monospace
	ul.navbar-menu
		margin 0
		padding 0
		list-style none
		li
			float left
			a
				display block
				padding 12px 16px
				font-size 22px
				color #2c3e50
	ul.navbar-menu.right
		float right

/* container */

.container
	width 80%
	margin 0 auto

/* welcome */

.welcome h1
	font-size 42px
	margin 0
	padding 0

/* card */

.card
	background #ffffff
	box-shadow 0px 1px 3px 0px rgba(0,0,0,0.12), 0px 1px 2px 0px rgba(0,0,0,0.24)
	margin 16px 0
	display block
	img
		width 100%
		transition all .2s ease
		&:hover
			transform scale(1.2)
			box-shadow 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22)
	.content
		padding 16px 16px
		.card-title
			font-size 20px
			margin 0
			padding 0

/* button */

.btn
	display inline-block
	border 1px solid #ecf0f1
	color #2c3e50
	background #ecf0f1
	font-size .875rem
	font-weight normal
	text-align center
	padding 12px 16px
	font-family inherit

/* grid */

.grid::after
	content ''
	clear both
	display table

.set
	float left
	padding 0 16px

.grid
	margin 0 -16px

@media (min-width 992px)
	for lg in (1..12)
		.lg-{lg}
			width (lg / 12 * 100%)

/* viewport */

@media (max-width 768px)
	.container
		width 100%
		padding 0 16px
	
	.navbar
		.navbar-head
			a.brand
				font-size 1rem
				font-weight 700
		ul.right
			position fixed
			bottom 0
			right 0